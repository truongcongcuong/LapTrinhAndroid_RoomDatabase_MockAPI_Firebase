<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/txt_li_id"
        android:layout_width="72dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_li_type"
        android:layout_width="277dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_li_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_li_id"
        app:layout_constraintTop_toTopOf="@+id/txt_li_id" />

    <TextView
        android:id="@+id/txt_li_price"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_li_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_li_id"
        app:layout_constraintTop_toBottomOf="@+id/txt_li_id" />

    <TextView
        android:id="@+id/txt_li_country"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_li_price"
        app:layout_constraintStart_toStartOf="@+id/txt_li_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_li_price" />

    <ImageButton
        android:id="@+id/ibt_li_update"
        android:layout_width="75dp"
        android:layout_height="58dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_li_country"
        app:layout_constraintEnd_toStartOf="@+id/ibt_li_delete"
        app:layout_constraintTop_toTopOf="@+id/txt_li_price" />

    <ImageButton
        android:id="@+id/ibt_li_delete"
        android:layout_width="75dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_li_country"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_li_price" />
</androidx.constraintlayout.widget.ConstraintLayout>